@model ComicBookGallery.Models.ComicBook

@{
    //Layout = null;//this says that no _Layout.cshtml page is invoked here
    //all the data can go here, but it is unusual - so they are sent to ComicBooksController.cs
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewBag.Title = "Comic Book Detail"; replaced with:
    ViewBag.Title = Model.DisplayText;
}

<h1>@Model.SeriesTitle</h1>
<h2>Issue #@Model.IssueNumber</h2>

<h5>Description:</h5>
<div>@Html.Raw(Model.DescriptionHtml)</div>

@if (Model.Artists.Length > 0)
{
    <h5>Artists:</h5>
    <div>
        <ul>
            @foreach (var artist in Model.Artists)
            {
                <li>@artist.Role : @artist.Name</li>
            }
        </ul>
    </div>
}